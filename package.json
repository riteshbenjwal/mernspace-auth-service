{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "Auth Service for mern space project",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "build": "tsc",
        "format": "prettier .",
        "format:check": "npm run format -- --check",
        "format:fix": "npm run format -- --write",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "test": "jest --no-cache --coverage --all --runInBand",
        "test:watch": "jest --watch --runInBand",
        "docker:build": "docker build -t auth-service:dev -f docker/development/Dockerfile .",
        "docker:run": "docker run --rm -it -v '$(pwd):/usr/src/app' -v /usr/src/app/node_modules --env-file '$(pwd)/.env' -p 5501:5501 -e NODE_ENV=development auth-prep:dev",
        "docker:db": "docker run --rm --name mernpg-container -e POSTGRES_USER=root -e POSTGRES_PASSWORD=root -v mernpgdata:/var/lib/postgresql/data -p 5432:5432 -d postgres",
        "start": "ts-node src/index.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate",
        "migration:run": "typeorm-ts-node-commonjs migration:run",
        "migration:create": "typeorm-ts-node-commonjs migration:create"
    },
    "author": "",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/http-errors": "^2.0.1",
        "@types/jest": "^29.5.5",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^16.11.10",
        "@types/supertest": "^2.0.14",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^14.0.1",
        "mock-jwks": "^1.0.10",
        "prettier": "3.0.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "10.7.0",
        "typescript": "4.5.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "nodemon": "^3.0.1",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "0.3.17",
        "winston": "^3.10.0"
    }
}
